# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================

# Primary LLM Provider: "groq" (fast cloud inference) or "ollama" (local)
LLM_PROVIDER=groq

# GROQ API Key (get from: https://console.groq.com)
# Required if using GROQ as primary provider
GROQ_API_KEY=your-groq-api-key-here

# Ollama Base URL (local inference server)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

EMBEDDING_MODEL=nomic-embed-text:latest
REASONING_MODEL=gemma3:4b
FAST_MODEL=gemma3:1b

# ============================================================================
# SEARCH API CONFIGURATION
# ============================================================================

# Tavily API Key (optional - for web search)
# Get from: https://tavily.com
TAVILY_API_KEY=

# SerpAPI Key (optional - deprecated, using Tavily now)
SERPAPI_KEY=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# ChromaDB (Vector Store) Path
CHROMA_DB_PATH=./data/chroma_db

# Supabase Configuration (optional - for cloud database)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

# Firebase (optional - legacy)
FIREBASE_CREDENTIALS_PATH=

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Backend API URL
BACKEND_URL=http://localhost:8000

# CORS Origins (comma-separated)
# Development: "*"
# Production: "https://yourdomain.com,https://www.yourdomain.com"
CORS_ORIGINS=*

# Logging Level
LOG_LEVEL=INFO

# ============================================================================
# FRONTEND CONFIGURATION (Next.js)
# ============================================================================

# Backend API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for frontend
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Port Configuration
PORT=8000
FRONTEND_PORT=3000
